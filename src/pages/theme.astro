---
import DefaultLayout from "../layouts/Default.astro";
---

<DefaultLayout>
    <div class="bg-base-100 text-base-content min-h-screen p-4 space-y-12">
    <header class="space-y-4">
        <div class="navbar bg-base-200 rounded-box shadow-sm">
        <div class="navbar-start">
            <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">Menu</div>
            <ul class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
                <li><a>Item 1</a></li>
                <li><a>Parent</a></li>
            </ul>
            </div>
            <a class="btn btn-ghost text-xl">daisyUI 5 Test</a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
            <li><a>Link</a></li>
            <li>
                <details>
                <summary>Parent</summary>
                <ul class="p-2">
                    <li><a>Submenu 1</a></li>
                    <li><a>Submenu 2</a></li>
                </ul>
                </details>
            </li>
            </ul>
        </div>
        <div class="navbar-end gap-2">
            <div class="indicator">
            <span class="indicator-item badge badge-secondary">9+</span>
            <button class="btn">Inbox</button>
            </div>
        </div>
        </div>

        <div class="breadcrumbs text-sm px-4">
        <ul>
            <li><a>Home</a></li>
            <li><a>Documents</a></li>
            <li>Add Document</li>
        </ul>
        </div>
    </header>

    <main class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <section class="lg:col-span-4 space-y-6">
        <h2 class="text-2xl font-bold border-b pb-2">Actions</h2>
        
        <div class="flex flex-wrap gap-2">
            <button class="btn btn-primary">Primary</button>
            <button class="btn btn-secondary">Secondary</button>
            <button class="btn btn-accent">Accent</button>
            <button class="btn btn-neutral">Neutral</button>
        </div>

        <div class="flex flex-wrap gap-2">
            <button class="btn btn-outline btn-info">Info</button>
            <button class="btn btn-soft btn-success">Success</button>
            <button class="btn btn-dash btn-warning">Warning</button>
            <button class="btn btn-ghost btn-error">Error</button>
        </div>

        <div class="join">
            <button class="btn join-item">Prev</button>
            <button class="btn join-item">Page 1</button>
            <button class="btn join-item">Next</button>
        </div>

        <div class="space-y-2">
            <p class="text-sm opacity-50">Swap & Toggle</p>
            <label class="swap swap-rotate btn btn-circle">
            <input type="checkbox" />
            <span class="swap-on">ðŸŒž</span>
            <span class="swap-off">ðŸŒš</span>
            </label>
            <input type="checkbox" class="toggle toggle-primary" checked />
        </div>
        </section>

        <section class="lg:col-span-4 space-y-6">
        <h2 class="text-2xl font-bold border-b pb-2">Inputs</h2>
        
        <fieldset class="fieldset">
            <legend class="fieldset-legend">Text Input & Validator</legend>
            <input type="text" class="input validator w-full" placeholder="Type 'hello'" required pattern="hello" />
            <p class="validator-hint">Type exactly "hello"</p>
        </fieldset>

        <label class="floating-label w-full">
            <input type="text" placeholder="Floating Label" class="input w-full" />
            <span>Email Address</span>
        </label>

        <select class="select w-full">
            <option disabled selected>Pick your favorite</option>
            <option>Homer</option>
            <option>Marge</option>
        </select>

        <div class="rating">
            <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" />
            <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" checked />
            <input type="radio" name="rating-2" class="mask mask-star-2 bg-orange-400" />
        </div>

        <input type="range" min="0" max="100" value="40" class="range range-accent" />
        </section>

        <section class="lg:col-span-4 space-y-6">
        <h2 class="text-2xl font-bold border-b pb-2">Display</h2>
        
        <div class="card bg-base-200 shadow-sm border border-base-300">
            <div class="card-body">
            <h2 class="card-title">Card Example
                <div class="badge badge-secondary">NEW</div>
            </h2>
            <p>Testing card-body text and spacing.</p>
            <div class="card-actions justify-end">
                <button class="btn btn-sm btn-primary">Buy Now</button>
            </div>
            </div>
        </div>

        <div class="collapse bg-base-100 border-base-300 border">
  <input type="checkbox" />
  <div class="collapse-title font-semibold">How do I create an account?</div>
  <div class="collapse-content text-sm">
    Click the "Sign Up" button in the top right corner and follow the registration process.
  </div>
</div>

        <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
            <div class="stat">
            <div class="stat-title">Downloads</div>
            <div class="stat-value text-primary-content">31K</div>
            </div>
            <div class="stat">
            <div class="stat-title">New Users</div>
            <div class="stat-value text-secondary">4,200</div>
            </div>
        </div>
        </section>

    </main>

    <section class="space-y-6">
        <h2 class="text-2xl font-bold border-b pb-2">Feedback</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div role="alert" class="alert alert-info shadow-md">
            <span>Information received.</span>
        </div>
        <div class="flex items-center gap-4">
            <span class="loading loading-spinner text-primary"></span>
            <span class="loading loading-dots text-secondary"></span>
            <progress class="progress progress-error w-56" value="70" max="100"></progress>
        </div>
        <span class="countdown font-mono text-2xl">
            <span style="--value:10;" aria-live="polite" aria-label="10">10</span>
            :
            <span style="--value:24; --digits: 2;" aria-live="polite" aria-label="24">24</span>
            :
            <span style="--value:59; --digits: 2;" aria-live="polite" aria-label="59">59</span>
        </span>
        </div>
    </section>

    <section class="space-y-6">
        <h2 class="text-2xl font-bold border-b pb-2">Complex Data</h2>
        <div class="overflow-x-auto">
        <table class="table table-zebra bg-base-200 rounded-box">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>1</td>
                <td>Cy Ganderton</td>
                <td><span class="status status-success"></span> Online</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Hart Hagerty</td>
                <td><span class="status status-error"></span> Offline</td>
            </tr>
            </tbody>
        </table>
        </div>
    </section>

    <footer class="footer sm:footer-horizontal bg-neutral text-neutral-content p-10 rounded-box">
        <nav>
        <h6 class="footer-title">Services</h6>
        <a class="link link-hover">Branding</a>
        <a class="link link-hover">Design</a>
        </nav>
        <nav>
        <h6 class="footer-title">Company</h6>
        <a class="link link-hover">About us</a>
        <a class="link link-hover">Contact</a>
        </nav>
        <nav>
        <h6 class="footer-title">Legal</h6>
        <a class="link link-hover">Terms of use</a>
        </nav>
    </footer>

    </div>
</Layout>