---
import { Icon } from "astro-icon/components";
import Navigation from "./Navigation.astro"
---

<div id="navbar" class="p-4 md:px-8 hidden md:flex justify-center fixed top-0 left-0 w-full transition-all duration-500 ease-in-out z-10">
    <Navigation />
</div>
<div id="mobileNavbar" class="fixed top-0 left-0 z-10 flex w-full items-center p-4 transition-all duration-500 ease-in-out md:px-8 md:hidden">
    
    <div class="absolute inset-0 -z-10 
                backdrop-blur-md 
                [mask-image:linear-gradient(to_bottom,black_0%,transparent_100%)] 
                [-webkit-mask-image:linear-gradient(to_bottom,black_0%,transparent_100%)]">
    </div>

    <div class="flex-1 text-lg font-bold">
        Logo/Titre
    </div>
    <label for="mobile_drawer" class="btn drawer-button">
        <Icon name="tabler:menu" />
    </label>
</div>
